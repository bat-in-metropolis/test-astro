---
import { Navigation } from '../components/Navigation';

interface Props {
  title: string;
  description?: string;
  currentPath?: string;
}

const { title, description = '', currentPath = '' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - Creative Studio</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <Navigation client:load currentPath={currentPath} />
    
    <header class="page-header">
      <div class="container">
        <h1>{title}</h1>
        {description && <p>{description}</p>}
      </div>
    </header>

    <slot />

    <footer>
      <div class="container">
        <p>&copy; 2026 Creative Studio. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
